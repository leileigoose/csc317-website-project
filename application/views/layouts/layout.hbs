<!DOCTYPE html>
<html>
  <head>
    <title>{{title}}</title>
    <link rel='stylesheet' type="text/css" href='\public\css\style.css'>
    <link rel='stylesheet' type="text/css" href='\public\css\flashmessages.css'>
    {{#each js}}
          <script defer type="text/javascript" src="/public/js/{{this}}"></script> 
    {{/each}}
  </head>  

  <body>
    {{#if (nonEmptyObject messages)}}
      {{>flashmessage}}
    {{/if}}
    {{>navigation}}
    {{{body}}}
    {{>footer}}
  </body>

  {{#if isLoggedIn}}
    <script>
      document.getElementById('logout-button').addEventListener('click', function(ev){
        fetch('/users/logout', {method: "post"})
          .then(response => response.json())
          .then(function(res_json) {
            window.location.replace('/');
          }).catch(err => console.log(err));
      })
    </script>
  {{/if}}

</html>
